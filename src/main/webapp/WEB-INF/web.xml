<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>


  <servlet>
    <servlet-name>LoginPageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.login.LoginPageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginPageEndpoint</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginCommandEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.login.LoginCommandEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCommandEndpoint</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutPageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.login.LogoutPageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutPageEndpoint</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>RegistrationPageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.login.RegistrationPageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationPageEndpoint</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QuestionsPageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.question.QuestionsPageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionsPageEndpoint</servlet-name>
    <url-pattern>/questions</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QuestionsPageEndpoint</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>askQuestionEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.question.AskQuestionPagEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>askQuestionEndpoint</servlet-name>
    <url-pattern>/ask</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QuestionsPage</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.question.QuestionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionsPage</servlet-name>
    <url-pattern>/questions.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QuestionPageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.question.QuestionPageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionPageEndpoint</servlet-name>
    <url-pattern>/question</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProfilePageEndpoint</servlet-name>
    <servlet-class>ch.heigvd.amt.projet1.ui.web.ProfilePageEndpoint</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfilePageEndpoint</servlet-name>
    <url-pattern>/profil</url-pattern>
  </servlet-mapping>
</web-app>
